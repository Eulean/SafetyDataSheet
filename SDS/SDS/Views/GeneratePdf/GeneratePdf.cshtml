@model SDS.Models.SdsViewModel

<style>
	.header-row {
		background-color: #00285b;
		color: white;
		font-weight: bold;
	}

	.table-bordered > :not(caption) > * > * {
		border: 1px solid #dee2e6;
	}

	.section-number {
		width: 50px;
	}

	.fw-bold {
		font-weight: bold;
	}

	.fst-italic {
		font-style: italic;
	}
    }

    .table {
        border: 1px solid #000;
        margin-bottom: 0;
    }

    tbody, td, tfoot, th, thead {
        border: 1.5px solid black !important;
    }

    .cas{
        white-space: nowrap;
    }

    .noRightB{
        border-right: 0px;
    }
</style>


<table class="table table-bordered">
    <tbody>
        <!-- Section 1.1 -->
        <tr class="header-row">
            <th class="section-number">1.1</th>
            <th colspan="6">Product Identifier</th>
        </tr>
        <tr>
            <th colspan="2" class="fw-bold">Product Name</th>
            <td colspan="5">@Model.ProductName</td>
        </tr>
        <tr>
            <th colspan="2" class="fw-bold">Biological Definition</th>
            <td colspan="5" class="fst-italic">@Model.BiologicalDefinition</td>
        </tr>
        <tr>
            <th colspan="2" class="fw-bold">INCI Name</th>
            <td colspan="5" class="fst-italic">@Model.InciName</td>
        </tr>
        <tr>
            <th class="fw-bold cas">CAS #</th>
            <td colspan="2">@Model.CasNumber</td>
            <th class="fw-bold" style="border-right-color: white !important;">FEMA #</th>
            <td>@Model.FemaNumber</td>
            <th class="fw-bold" style="border-right-color: white !important;">EINECS #</th>
            <td>@Model.EinecsNumber</td>
        </tr>

        <!-- Section 1.2 -->
        <tr class="header-row">
            <th class="section-number">1.2</th>
            <th colspan="6">Relative identified uses of the substance or mixture and uses advised against</th>
        </tr>
        <tr>
            <td style="border-right-color: white !important;"></td>
            <td colspan="6">1.2</td>
        </tr>

        <!-- Section 1.3 -->
        <tr class="header-row">
            <th class="section-number">1.3</th>
            <th colspan="6">Details of the supplier of the safety data sheet</th>
        </tr>
        <tr>
            <td style="border-right-color: white !important;"></td>
            <td colspan="6">@Model.SupplierDetails</td>
        </tr>

        <!-- Section 1.4 -->
        <tr class="header-row">
            <th class="section-number">1.4</th>
            <th colspan="3">Emergency Tel. No.</th>
            <td colspan="3" style="background-color: white; color: black;">@Model.EmergencyPhone</td>
        </tr>
    </tbody>
</table>

<table class="table table-bordered">
    <tbody>
        <!-- Section 2.1 -->
        <tr class="header-row">
            <th class="section-number">2.1</th>
            <th colspan="2">Classification of the substance or mixture</th>
        </tr>
        <tr>
           <td colspan="2">
                <div class="p-2 text-13">
                    @Model.HazardStatements 
                </div>
           </td>
        </tr>

        <!-- Section 2.2 -->
        <tr class="header-row">
            <th class="section-number">2.2</th>
            <th colspan="2">Label Elements</th>
        </tr>
        <tr>
            <td colspan="2">
                Photo Section may be can copy style from other people 
            </td>
        </tr>

    </tbody>
</table>
